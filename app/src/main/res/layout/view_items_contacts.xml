<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.sirius.sample.utils.DateUtils"/>
        <variable
            name="model"
            type="com.sirius.sample.models.ui.ItemContacts" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@color/blue">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        style="@style/Regular15"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@{model.title}"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/chatBtn"
                        android:src="@drawable/btn_chat"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/date_connected_text"
                                android:textAllCaps="true"
                                style="@style/FontSFMedium"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="@string/connected_at"
                                android:textColor="@color/blue"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/date_connected"
                                android:textAllCaps="true"
                                style="@style/FontSFMedium"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_marginLeft="4dp"
                                android:text="@{DateUtils.getStringFromDateBase(model.date)}"
                                android:textColor="@color/blue"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:id="@+id/detailsBtn"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/details"
                                android:textColor="@color/gray_text_hint"
                                android:layout_height="wrap_content"

                                style="@style/Regular14"
                               />
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/ic_right_arrow"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/actionBtn"
                        android:visibility="@{model.actionExist ? View.VISIBLE : View.GONE}"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/menu_action"/>
                </FrameLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.sirius.sample.utils.DateUtils"/>
        <variable
            name="item"
            type="com.sirius.sample.models.ui.ItemCredentials" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/FontBold"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/blue"
                        tools:text="Permamnet Card"
                        android:text="@{item.title}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Regular14"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/blue"
                        tools:text="USCIS"
                        android:text="@{item.title}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/detailsList"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/detailsBtn">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/details"
                            android:textColor="@color/gray_text_hint"
                            android:layout_height="wrap_content"

                            style="@style/Regular14"
                            />
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_right_arrow"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:background="@drawable/btn_yellow_round">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/FontBold"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:text="@string/issued_at"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/FontBold"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        tools:text="12/22/2021"
                        android:text="@{DateUtils.getStringFromDate(item.date,DateUtils.PATTERN_ddMMyyyyHHmm ,false)}"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>